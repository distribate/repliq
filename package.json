{
  "private": true,
  "scripts": {
    "start": "turbo start",
    "build": "turbo build",
    "dev": "turbo dev",
    "docker-start": "concurrently \"docker compose -f docker-compose-supabase.yml up -d\" \"docker compose -f docker-compose-external.yml up -d\" \"docker compose -f docker-compose-minecraft.yml up -d\"",
    "docker-down": "concurrently \"docker compose -f docker-compose-supabase.yml down\" \"docker compose -f docker-compose-external.yml down\" \"docker compose -f docker-compose-minecraft.yml down\"",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lp-gen-types": "kysely-codegen --dialect postgres --url=env\\(LP_DATABASE_URL\\) --out-file=packages/types/db/luckperms-database-types.ts",
    "auth-gen-types": "kysely-codegen --dialect postgres --url=env\\(AUTH_DATABASE_URL\\) --out-file=packages/types/db/auth-database-types.ts",
    "forum-gen-types": "kysely-codegen --dialect postgres --url=env\\(FORUM_DATABASE_URL\\) --out-file=packages/types/db/forum-database-types.ts",
    "payments-gen-types": "kysely-codegen --dialect postgres --url=env\\(PAYMENTS_DATABASE_URL\\) --out-file=packages/types/db/payments-database-types.ts",
    "skins-gen-types": "kysely-codegen --dialect mysql --url=env\\(SKINS_DATABASE_URL\\) --out-file=packages/types/db/skins-database-types.ts"
  },
  "dependencies": {
    "@litehex/node-vault": "^1.0.1"
  },
  "devDependencies": {
    "concurrently": "9.1.0",
    "cross-env": "7.0.3",
    "dotenv-cli": "7.4.4",
    "eslint": "8.57.1",
    "kysely-codegen": "0.17.0",
    "prettier": "3.4.2",
    "prettier-plugin-tailwindcss": "0.5.14",
    "turbo": "2.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "name": "fasberry-forum",
  "packageManager": "yarn@4.3.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
