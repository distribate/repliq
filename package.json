{
  "private": true,
  "scripts": {
    "build": "turbo build",
    "frontend": "turbo dev --filter=skin-proxy --filter=web",
    "dev": "concurrently -n \"DOCKER,DEV\" -c \"blue,green\" \"docker-compose up -d\" \"frontend\"",
    "start": "yarn workspace web run start",
    "db-dump-schema": "yarn workspace database run dump-schema",
    "db-dump-seed": "yarn workspace database run dump-seed",
    "db-gen-types": "yarn workspace database run gen-types",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@repo/config-typescript": "*",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.5.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "^2.2.3"
  },
  "engines": {
    "node": ">=18"
  },
  "name": "fasberry-forum",
  "packageManager": "yarn@4.3.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
