{
  "extends": "@repo/config-typescript/hono.json",
  "include": [
    "**/*.ts",
    "*.ts"
  ],
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "#*": [
        "src/*"
      ]
    },
  },
  "exclude": [
    "node_modules"
  ],
}