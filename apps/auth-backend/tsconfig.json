{
  "extends": "@repo/config-typescript/hono.json",
  "include": [
    "**/*.ts", "*.ts"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  }
}