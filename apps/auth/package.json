{
  "name": "auth",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production bun run dist/index.js",
    "build": "NODE_ENV=production bun build src/index.ts --target bun --outdir ./dist --sourcemap --minify",
    "dev": "NODE_ENV=development bun run --hot src/index.ts",
    "lint": "bun x eslint \"src/**/*.ts\"",
    "lint:fix": "bun eslint \"src/**/*.ts\" --fix",
    "type-check": "tsc --noEmit"
  },
  "imports": {
    "#*": "./src/*"
  },
  "dependencies": {
    "@hono/zod-validator": "0.7.2",
    "@nats-io/transport-node": "3.0.0-32",
    "@oslojs/crypto": "1.0.1",
    "@oslojs/encoding": "1.1.0",
    "@repo/assets": "*",
    "@repo/shared": "*",
    "@supabase/supabase-js": "2.45.6",
    "bcryptjs": "2.4.3",
    "hono": "4.9.6",
    "hono-rate-limiter": "0.4.2",
    "ioredis": "5.6.1",
    "kysely": "0.27.4",
    "pg": "8.13.1",
    "ua-parser-js": "2.0.3",
    "zod": "4.0.15"
  },
  "devDependencies": {
    "@repo/config-eslint": "*",
    "@repo/config-nats": "*",
    "@repo/config-typescript": "*",
    "@repo/types": "*",
    "@types/bcryptjs": "2.4.6",
    "@types/bun": "1.1.13",
    "@types/pg": "8.11.10",
    "typescript": "^5.4.5"
  }
}
