{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "#*": ["./src/*"]
    }
  },
  "include": [
    "**/*.ts", "*.ts"
  ],
  "exclude": [
    "node_modules", "dist",
  ]
}