{
	"extends": "@repo/config-typescript/base.json",
	"include": [
		"**/*.ts", "*.ts"
	],
	"compilerOptions": {
		"jsx": "preserve",
		"esModuleInterop": true,
		"lib": ["es2020"],
		"module": "es2022",
		"preserveConstEnums": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"#*": ["./*"]
		}
	}
}